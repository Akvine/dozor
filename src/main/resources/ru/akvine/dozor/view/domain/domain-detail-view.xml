<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://domainDetailView.title"
      focusComponent="form">
    <data>
        <instance id="domainDc"
                  class="ru.akvine.dozor.entity.Domain">
            <fetchPlan extends="_base"/>
            <loader id="domainDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="domainDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <select id="criticallyTypeField" property="criticallyType"/>
            <textField id="nameField" property="name"/>
            <textField id="descriptionField" property="description"/>
            <checkbox id="systemField" property="system"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
